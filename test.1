document.getElementById("submitQuiz").addEventListener("click", () => {
    const form = document.getElementById("quizForm");
    const responses = [];
    for (let i = 1; i <= 15; i++) {
        responses.push(form[`q${i}`]?.value || "");
    }

    let result = "";

    if (responses.includes("")) {
        result = "Veuillez répondre à toutes les questions pour obtenir un résultat.";
    } else {
        result = "Merci d'avoir complété le questionnaire. Vos réponses sont : " + responses.join(", ");
    }

    document.getElementById("result").innerText = result;
});
